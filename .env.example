# Supabase
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Email
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="Afromerica Entertainment <noreply@afromerica.com>"
RESEND_SUPPORT_EMAIL="support@afromerica.com"
RESEND_CONTACT_EMAIL="info@afromerica.com"

# JWT for OTP tokens
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# SMS Provider (Choose one)
# Option 1: Termii (Popular in Africa)
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=Afromerica

# Option 2: Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Option 3: Africa's Talking
AFRICASTALKING_USERNAME=your_username
AFRICASTALKING_API_KEY=your_api_key
AFRICASTALKING_SENDER_ID=Afromerica

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="afromerica-uploads"

# Redis
REDIS_URL="redis://localhost:6379"

# Paystack
PAYSTACK_SECRET_KEY="sk_test_your-paystack-secret"
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_your-paystack-public"
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Afromerica Entertainment"
NODE_ENV="development"

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Feature Flags
NEXT_PUBLIC_ENABLE_SHOWCASE_VOTING=true
NEXT_PUBLIC_ENABLE_PILOT_VOTING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Admin
ADMIN_EMAIL=admin@afromerica.com
ADMIN_HOSTNAME=admin.yourdomain.com